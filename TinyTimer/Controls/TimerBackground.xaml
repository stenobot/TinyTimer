    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="BackgroundModeStates">
                <VisualState x:Name="SquaresMode">
                    <VisualState.Setters>
                        <Setter Target="squaresAnimationGrid.Visibility"
                                Value="Visible" />
                        <Setter Target="circlesAnimationGrid.Visibility"
                                Value="Collapsed" />
                        <Setter Target="linesAnimationGrid.Visibility"
                                Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="CirclesMode">
                    <VisualState.Setters>
                        <Setter Target="squaresAnimationGrid.Visibility"
                                Value="Collapsed" />
                        <Setter Target="circlesAnimationGrid.Visibility"
                                Value="Visible" />
                        <Setter Target="linesAnimationGrid.Visibility"
                                Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="LinesMode">
                    <VisualState.Setters>
                        <Setter Target="squaresAnimationGrid.Visibility"
                                Value="Collapsed" />
                        <Setter Target="circlesAnimationGrid.Visibility"
                                Value="Collapsed" />
                        <Setter Target="linesAnimationGrid.Visibility"
                                Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid x:Name="squaresAnimationGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid x:Name="twentyone" Background="{ThemeResource SystemAccentColor}" />
            <Grid x:Name="twentytwo" Background="{ThemeResource SystemAccentColor}" Grid.Column="1" />
            <Grid x:Name="twentythree" Background="{ThemeResource SystemAccentColor}" Grid.Column="2" />
            <Grid x:Name="twentyfour" Background="{ThemeResource SystemAccentColor}" Grid.Column="3" />
            <Grid x:Name="twentyfive" Background="{ThemeResource SystemAccentColor}" Grid.Column="4" />
            <Grid x:Name="sixteen" Background="{ThemeResource SystemAccentColor}" Grid.Row="1" />
            <Grid x:Name="seventeen" Background="{ThemeResource SystemAccentColor}" Grid.Row="1" Grid.Column="1" />
            <Grid x:Name="eighteen" Background="{ThemeResource SystemAccentColor}" Grid.Row="1" Grid.Column="2" />
            <Grid x:Name="nineteen" Background="{ThemeResource SystemAccentColor}" Grid.Row="1" Grid.Column="3" />
            <Grid x:Name="twenty" Background="{ThemeResource SystemAccentColor}" Grid.Row="1" Grid.Column="4" />
            <Grid x:Name="eleven" Background="{ThemeResource SystemAccentColor}" Grid.Row="2" />
            <Grid x:Name="twelve" Background="{ThemeResource SystemAccentColor}" Grid.Row="2" Grid.Column="1" />
            <Grid x:Name="thirteen" Background="{ThemeResource SystemAccentColor}" Grid.Row="2" Grid.Column="2" />
            <Grid x:Name="fourteen" Background="{ThemeResource SystemAccentColor}" Grid.Row="2" Grid.Column="3" />
            <Grid x:Name="fifteen" Background="{ThemeResource SystemAccentColor}" Grid.Row="2" Grid.Column="4" />
            <Grid x:Name="six" Background="{ThemeResource SystemAccentColor}" Grid.Row="3" />
            <Grid x:Name="seven" Background="{ThemeResource SystemAccentColor}" Grid.Row="3" Grid.Column="1" />
            <Grid x:Name="eight" Background="{ThemeResource SystemAccentColor}" Grid.Row="3" Grid.Column="2" />
            <Grid x:Name="nine" Background="{ThemeResource SystemAccentColor}" Grid.Row="3" Grid.Column="3" />
            <Grid x:Name="ten" Background="{ThemeResource SystemAccentColor}" Grid.Row="3" Grid.Column="4" />
            <Grid x:Name="one" Background="{ThemeResource SystemAccentColor}" Grid.Row="4" />
            <Grid x:Name="two" Background="{ThemeResource SystemAccentColor}" Grid.Row="4" Grid.Column="1" />
            <Grid x:Name="three" Background="{ThemeResource SystemAccentColor}" Grid.Row="4" Grid.Column="2" />
            <Grid x:Name="four" Background="{ThemeResource SystemAccentColor}" Grid.Row="4" Grid.Column="3" />
            <Grid x:Name="five" Background="{ThemeResource SystemAccentColor}" Grid.Row="4" Grid.Column="4" />
        </Grid>

        <Grid x:Name="circlesAnimationGrid">

            <Ellipse x:Name="ellipse" Fill="{ThemeResource TinyTimerAccentColorBrush}" Width="200" Height="200">
                <interactivity:Interaction.Behaviors>

                    <behaviors:Scale x:Name="ScaleEllipse"
                                     CenterX="100"
                                     CenterY="100"
                                     ScaleX="0.0"
                                     ScaleY="0.0"
                                     Duration="900" 
                                     Delay="0"
                                     AutomaticallyStart="True" />

                </interactivity:Interaction.Behaviors>
            </Ellipse>
        </Grid>

        <Grid x:Name="linesAnimationGrid">
            <Grid.RowDefinitions>
